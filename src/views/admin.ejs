<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="shortcut icon" type="image/icon" href="/images/logo/SW02.png" />
    <link rel="stylesheet" href="/css/estilo-dash.css">


    <title>Ventana Administrador</title>

</head>
<body>
    <div class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="/images/logo/SW01.png">
                    <h2>Shopping <span> World </span></h2>
                </div>
                <div class="close" id="close-btn">
                    <span class="material-symbols-sharp">
                        close
                        </span>
                </div>
            </div>
                <div class="sidebar">
                    <a href="/admin" class="active">
                        <span class="material-symbols-sharp">
                            dashboard
                            </span>
                            <h3>Dashboard</h3>
                    </a>
                    <a href="/pedidos">
                        <span class="material-symbols-sharp">
                            list_alt
                            </span>
                            <h3>Pedidos</h3>
                    </a>
                    <a href="/usuarios">
                        <span class="material-symbols-sharp">
                            group
                            </span>
                            <h3>Usuarios</h3>
                    </a>
                    <a href="#">
                        <span class="material-symbols-sharp">
                            logout
                            </span>
                            <h3>Salir</h3>
                    </a>
                </div>
           
        </aside>
        <!--END OF ASIDE SIDEBAR-->

        <main>
            <h1>Dashboard</h1>
            
            <div class="insig">
                <div class="ventas">
                    <span class="material-symbols-sharp">
                        analytics
                        </span>
                        <div class="middle">
                            <div class="left">
                                <h3>Ventas totales</h3>
                                <% if (data) { %>
                                    <% data.forEach(function(item) {%>
                                <h1>$<%= item.totales%></h1>
                                <%})}%>
                            </div>
                            <div class="progress">
                                <svg>
                                    <circle cx="38" cy="38" r="36"></circle>
                                </svg>
                                <div class="number">
                                    <p>81%</p>
                                </div>
                            </div>
                        </div>
                        <small class="text-muted"> Ultimas 24 horas</small>
                </div>
                <!--END OF VENTAS-->
                <div class="pedidos">
                    <span class="material-symbols-sharp">
                        grading
                        </span>
                        <div class="middle">
                            <div class="left">
                                <h3>Pedidos Totales</h3>
                                <% if (data) { %>
                                    <% data.forEach(function(item) {%>
                                <h1><%= item.pedidosact%></h1>
                                <%})}%>
                            </div>
                            <div class="progress">
                                <svg>
                                    <circle cx="38" cy="32" r="36"></circle>
                                </svg>
                                <div class="number">
                                    <p>23%</p>
                                </div>
                            </div>
                        </div>
                        <small class="text-muted"> Ultimas 24 horas</small>
                </div>
                <!--END OF PEDIDOS-->
                <div class="usuarios">
                    <span class="material-symbols-sharp">
                        manage_accounts
                        </span>
                        <div class="middle">
                            <div class="left">
                                <h3>Usuarios registrados</h3>
                                <% if (data) { %>
                                    <% data.forEach(function(item) {%>
                                <h1><%= item.Activos%></h1>
                                <%})}%>
                            </div>
                            <div class="progress">
                                <svg>
                                    <circle cx="38" cy="38" r="36"></circle>
                                </svg>
                                <div class="number">
                                    <p>50%</p>
                                </div>
                            </div>
                        </div>
                        <small class="text-muted"> Ultimas 24 horas</small>
                </div>
                <!--END OF USUARIOS-->
            </div>
             <!--END OF insights-->

            <div class="recent-order">
                <h2>Pedidos recientes</h2>
                <table>
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>Cliente</th>
                            <th>Pago</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                            <% data.forEach(function(item) {%>
                        <tr>
                            
                            <td><%= item.idPedido%></td>
                            <td><%= item.nombre%></td>
                            <td>Realizado</td>
                            <td><%= item.estado%></td>
                            <td class="primary"><a href="/pedidos">Detalle </a></td>
                        </tr>
                        <% })}%>
                      
                    </tbody>
                </table>
                <a href="/pedidos"> Mostrar Todo</a>
            </div>

        </main>
        <!--end of main-->
        <div class="right">
            <div class="top">
                <button id="menu-btn">
                    <span class="material-symbols-sharp">
                        menu
                        </span>
                </button>
                <div class="theme-toggler">
                    
                    <span class="material-symbols-sharp active">light_mode</span>
                    <span class="material-symbols-sharp">dark_mode</span>
                    
                </div>
                <div class="profile">
                    <div class="info">
                        <p>Hola, <b></b></p>
                        <small class="text-muted">Admin</small>
                    </div>
                    <div class="profile-photo">
                        <img src="/images/login/profile1.jpeg" >
                    </div>
                </div>
            </div>
            <!--end of the top-->
            <div class="recent-updates">
                <h2>Actualizaciones Recientes</h2>
                <div class="updates">
                    <div class="update">
                        <div class="profile-photo">
                            <img src="" alt="">
                        </div>
                        <div class="message">
                            <p><b>Actualización</b> Mensaje Admin!</p>
                            <small class="text-muted">
                                hace 2 segundos
                            </small>
                        </div>
                    </div>
                    <div class="update">
                        <div class="profile-photo">
                            <img src="" alt="">
                        </div>
                        <div class="message">
                            <p><b>Generando Token</b> Mensaje Admin!</p>
                            <small class="text-muted">
                                hace 2 segundos
                            </small>
                        </div>
                    </div>
                    <div class="update">
                        <div class="profile-photo">
                            <img src="" alt="">
                        </div>
                        <div class="message">
                            <p><b>Baja mensual</b> Mensaje Admin!</p>
                            <small class="text-muted">
                                hace 2 horas
                            </small>
                        </div>
                    </div>
                    <div class="update">
                        <div class="profile-photo">
                            <img src="" alt="">
                        </div>
                        <div class="message">
                            <p><b>Nuevos usuarios</b> Mensaje Admin!</p>
                            <small class="text-muted">
                                hace 20 días
                            </small>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="/js/dashboard-admin.js"></script>
</body>

</html>